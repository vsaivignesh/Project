<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.libsys">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.libsys.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.AppCompat.DayNight">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".LendBooks">
        </activity>
        <activity android:name=".LoginActivity">
        </activity>
        <activity android:name=".red">
        </activity>
        <activity android:name=".Lend">
        </activity>
        <activity android:name=".RetBooks">
        </activity>
        <activity android:name=".Check">
        </activity>
        <activity android:name=".Guest">
        </activity>
        <activity android:name=".Check2">
        </activity>
        <activity android:name=".LendBooksg">
        </activity>
        <activity
            android:name=".splscr"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.libsys.NewUser"
            android:label="@string/adduseractivitylabel" android:noHistory="true">
        </activity>
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>